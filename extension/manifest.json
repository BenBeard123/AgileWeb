{
  "manifest_version": 3,
  "name": "AgileWeb - Age-Appropriate Content Filter",
  "version": "1.0.0",
  "description": "Helps increase child safety on different websites by filtering content by age group",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webNavigation",
    "activeTab",
    "scripting",
    "management",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}

